<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
xmlns:ui='urn:ui:com.google.gwt.uibinder'
xmlns:rs='urn:import:info.piwai.rockslide.sh.client'
xmlns:g='urn:import:com.google.gwt.user.client.ui'
>

	<ui:image field="octocat" src="octocat_social.png" />
  
    <ui:with field="java" type="info.piwai.rockslide.sh.java.client.JavaSH"/>

	<ui:style>
		@sprite .octocat {
			gwt-image: 'octocat';
			width: auto;
			padding-left: 177px;
			line-height: 82px;
		}
	</ui:style>

	<g:HTMLPanel>
		<div class="header">Create your slideshow!</div>
		<div class="section">
          <h1>GWT &amp; UiBinder written slides</h1>
                <ul>
                  <li>It's really easy!
                  <rs:Code brush="{java.brush}"><pre>
                      &lt;ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"&gt;
                        &lt;div&gt;
                          &lt;div class="section intro"&gt;
                            &lt;h1&gt;Hello!&lt;/h1&gt;
                            &lt;p&gt;Welcome to Rockslide documentation&lt;/p&gt;
                            &lt;p&gt;Press ← → to navigate.&lt;/p&gt;
                          &lt;/div&gt;
                        &lt;/div&gt;
                      &lt;/ui:UiBinder&gt;
                      </pre>
                  </rs:Code>
                  </li>
                  <li>
                    <div class="{style.octocat}" >Fork me on <a target="_blank" href="https://github.com/pyricau/rockslide">Github!</a></div>
                  </li>
                </ul>
 
		</div>
	</g:HTMLPanel>
</ui:UiBinder>
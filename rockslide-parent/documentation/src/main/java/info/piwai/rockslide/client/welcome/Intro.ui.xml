<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
xmlns:ui='urn:ui:com.google.gwt.uibinder'
xmlns:rs='urn:import:info.piwai.rockslide.sh.client'
xmlns:g='urn:import:com.google.gwt.user.client.ui'
>

    <ui:image field="github" src="github_logo.png" />
    
    <ui:with field="java" type="info.piwai.rockslide.sh.java.client.JavaSH"/>
    

	<ui:style>
		@sprite .github {
			gwt-image: 'github';
			width: auto;
 			padding-left: 64px;
 			line-height: 64px;
		}
	</ui:style>

	<g:HTMLPanel>
		<h1>Rockslide generates...</h1>
		<div class="section">
            <h2>... dynamic GWT slideshows</h2>
            <ul>
              <li>Yes, GWT is cool!</li>
              <li><div class="{style.github}" >This project lives on <a target="_blank" href="https://github.com/pyricau/rockslide">Github</a></div></li>
            </ul>
            
			
            <rs:Code firstLine="42" highlight="44" brush="{java.brush}"><pre>
                System.out.println("You can include code in your slides,");
                
                System.out.println("thanks to SyntaxHighlighter !");
                </pre>
            </rs:Code>
        </div>
	</g:HTMLPanel>
</ui:UiBinder>
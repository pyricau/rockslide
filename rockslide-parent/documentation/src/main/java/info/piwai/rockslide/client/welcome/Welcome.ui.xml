<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
    xmlns:ui='urn:ui:com.google.gwt.uibinder'
    xmlns:rs='urn:import:info.piwai.rockslide.client.ui'
    xmlns:sh='urn:import:info.piwai.rockslide.sh.client.ui'
    xmlns:g='urn:import:com.google.gwt.user.client.ui'
>

  <ui:with field="xml" type="info.piwai.rockslide.sh.xml.client.XmlSH"/>
  <ui:with field="java" type="info.piwai.rockslide.sh.java.client.JavaSH"/>

  <ui:image field="octocat" src="octocat_social.png" />

  <ui:style>
    @sprite .octocat {
      gwt-image: 'octocat';
      width: auto;
      padding-left: 177px;
      line-height: 82px;
    }
  </ui:style>

  <rs:Slides>
  
    <rs:Slide>
      <div class="section intro">
        <h2>Hello!</h2>
        <p>Welcome to <strong>Rockslide</strong> documentation</p>
        <p>Press <span class="tag">←</span> <span class="tag">→</span> to navigate</p>
      </div>    
    </rs:Slide>
    
    <rs:Slide hid="Intro">
      <h1>Rockslide</h1>
      <div class="section">
              <h2>What's this?</h2>
              <ul>
                <li>Rockslide generates dynamic presentations</li>
                <li>Using <a href="http://code.google.com/webtoolkit">GWT</a> power</li>
                <li><span class="tag">&lt;opinionated&gt;</span> GWT is <strong>cool</strong>! <span class="tag">&lt;/opinionated&gt;</span></li>
              </ul>
      	
              <sh:Code firstLine="42" highlight="44" brush="{java.brush}"><pre>
                  System.out.println("You can include code in your slides,");
                  
                  System.out.println("thanks to SyntaxHighlighter !");
                  </pre>
              </sh:Code>
      </div>
    </rs:Slide>
    
    <rs:Slide hid="CreateYours">
      <h1>Create your slideshow!</h1>
      <div class="section">
        <h2>GWT &amp; UiBinder written slides</h2>
        <ul>
          <li>It's really easy!
            <sh:Code brush="{xml.brush}"><pre>
                  &lt;rs:Slide&gt;
                    &lt;div class="section intro"&gt;
                      &lt;h2&gt;Hello!&lt;/h2&gt;
                      &lt;p&gt;Welcome to Rockslide documentation&lt;/p&gt;
                      &lt;p&gt;Press ← → to navigate.&lt;/p&gt;
                    &lt;/div&gt;
                  &lt;/rs:Slide&gt;
                </pre>
            </sh:Code>
          </li>
          <li>
            <div class="{style.octocat}" >Fork me on <a target="_blank" href="https://github.com/pyricau/rockslide">GitHub!</a></div>
          </li>
        </ul>
      </div>
    </rs:Slide>
    
  </rs:Slides>

</ui:UiBinder>
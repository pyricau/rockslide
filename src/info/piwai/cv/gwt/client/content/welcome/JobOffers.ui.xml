<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
    xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g='urn:import:com.google.gwt.user.client.ui'
    >
    
    <ui:image field="linkedin" src="linkedin_logo.png" />
    
    <ui:style>
    	.items {
    		margin-bottom: 50px;
    	}
    	@sprite .linkedin {
			gwt-image: 'linkedin';
 			float:left;
 			margin-right: 20px;
		}
		.clear {
			clear:both;
		}
		.center {
			line-height: 64px;
		}		
    </ui:style>

    <g:HTMLPanel>
        <div class="header">Job Offers</div>
        <div class="section summary">
            <ul>
                <li class="{style.items}">I work in Paris for <a target="_blank" href="https://www.excilys.com/">Excilys</a>, a great software service group</li>
                <li class="{style.items}">I am currently <strong>not</strong> looking for a job</li>
                <li class="{style.items}">However, if you match <g:Button ui:field="description">this description</g:Button> you can <a href="#Contact">contact me</a> with a job offer</li>
                <li><div class="{style.center}"><div class="{style.linkedin}"/>Tired of <span class="keytag">←</span> <span class="keytag">→</span> ? See my <a target="_blank" href="http://www.linkedin.com/in/piwai">LinkedIn profile</a><div class="{style.clear}"/></div>
                </li>
            </ul>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>